<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <Button android:id="@+id/alert_dialog"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="AlertDialog"
            />

    <Button android:id="@+id/date_pick_dialog"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="DatePickerDialog"
            />
    <Button android:id="@+id/time_pick_dialog"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="TimePickerDialog"
            />
    <Button android:id="@+id/progress_dialog"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="ProgressDialog"
            />

</LinearLayout>