<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <LinearLayout       android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
            >
            <Button  android:id="@+id/button1"
                     android:layout_width="fill_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/confirm"
                    />
            <Button android:id="@+id/button2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    />

            <Button android:id="@+id/text_view_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    />
            <Button android:id="@+id/edit_view_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EditView"
                    />
            <Button android:id="@+id/check_box_button"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="CheckBox"
                    />
            <Button android:id="@+id/radio_group_button"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="RadioGroup"
                    />
            <Button android:id="@+id/spinner_button"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="下拉列表"
                    />
            <Button android:id="@+id/auto_complete_button"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="AutoCompleteButton"
                    />
            <Button android:id="@+id/date_pick_button"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="DatePicker"
                    />
        <Button android:id="@+id/progress_bar_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="进度条"
                />
        <Button android:id="@+id/seek_bar_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="拖动条"
                />
        <Button android:id="@+id/rating_bar_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="评分组件(星星)"
                />


        <Button android:id="@+id/dialog_page"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Dialog弹出框"
                />
        <Button android:id="@+id/tab_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="tab标签介绍"
                />
    </LinearLayout>
</ScrollView>