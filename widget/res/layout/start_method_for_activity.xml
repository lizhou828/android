<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Activity的4种启动方式：Standard, singleTop, singleTask和singleInstance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/standard_button"
        android:text="Standard(默认)"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/singleTop_button"
        android:text="singleTop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/singleTask_button"
        android:text="singleTask"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/singleInstance_button"
        android:text="singleInstance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>