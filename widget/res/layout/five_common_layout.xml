<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <Button android:id="@+id/linear_layout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LinearLayout线性布局"
            />
    <Button android:id="@+id/frame_layout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FrameLayout框架布局"
            />

    <Button android:id="@+id/absolute_layout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AbsoluteLayout绝对布局"
            />

    <Button android:id="@+id/relative_layout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RelativeLayout相对布局"
            />

    <Button android:id="@+id/table_layout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TableLayout表格布局"
            />



</LinearLayout>